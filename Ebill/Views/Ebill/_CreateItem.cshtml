
@model Ebill.Models.Items

<tr id="@Model.ItemIndex">
    <td>
         @Model.ProductName
        <input type="hidden" name="Items[@Model.ItemIndex].ProductName" value="@Model.ProductName" />
    </td>
    <td>
        @Model.Price
        <input type="hidden" name="Items[@Model.Price].Price" value="@Model.Price" />
    </td>
    <td>
        @Model.Quantity
        <input type="hidden" name="Items[@Model.Quantity].Quantiy" value="@Model.Quantity" />
    </td>
    <td><button type="button" class="btn btn-sm bg-danger text-white">Xóa</button></td>
</tr>

